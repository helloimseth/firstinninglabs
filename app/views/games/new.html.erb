<h1>New Game</h1>

<form action="<%= games_url %>" method="post">
  <%= auth_token %>

  <label for="game-date">Date
    <input type="date" name="game[date]" value="">
  </label>
  <label for="game-favorite_id">Favorite
    <select class="" name="favorite_id">
      <option value="">Select</option>
      <% @teams.each do |team| %>
        <option value="<%= team.id %>"
          <%= 'selected' if @game.favorite == team %> >
            <%= team.name %>
          </option>
      <% end %>
    </select>
  </label>

  <label for="game-underdog_id">Underdog
    <select class="" name="underdog_id">
      <option value="">Select</option>
      <% @teams.each do |team| %>
        <option value="<%= team.id %>"
          <%= 'selected' if @game.underdog == team %> >
            <%= team.name %>
          </option>
      <% end %>
    </select>
  </label>

  <label for="game-sportsbook_odds">Sporstbook Odds
    <input type="text"
           name="game[sportsbook_odds]"
           value="<%= @game.sportsbook_odds %>">
  </label>

  <input type="submit" name="name" value="Submit">
</form>
